void qsort(int a[], int l, int r) {
    int i=l, j=r, flag=a[(l+r)/2], temp;
    do {
        while (a[i] < flag) {
            i++;
        }
        while (a[j] > flag) {
            j--;
        }
        if (i<=j) {
            temp=a[i];  a[i]=a[j];  a[j]=temp;
        }
    }while (i<=j);
    if (l<j) {
        qsort(a, l, j);
    }
    if (i<r) {
        qsort(a, i, r);
    }
}