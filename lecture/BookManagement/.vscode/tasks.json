
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build cpp project",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",                    // C++标准
                "-I${workspaceFolder}/header",  // 头文件路径
                "${workspaceFolder}/source/*.cpp",  // 编译src下所有cpp文件
                "-o",
                "${workspaceFolder}/bin/main",   // 输出到bin目录
                "-g"                             // 生成调试信息
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}